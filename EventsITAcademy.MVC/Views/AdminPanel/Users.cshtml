@using EventsITAcademy.Application.Users.Responses
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Users";
}
@model ICollection<UserResponseModel>

<div class="text-center">
    <h1 class="display-4">Users</h1>
    @if (@Model != null && @Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Email</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <a class="btn btn-info" asp-controller="AdminPanel" asp-action="AssignRole" asp-route-id="@user.Id">Edit Role</a>
                            <a class="btn btn-danger" asp-controller="AdminPanel" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="text-center">
</div>