@model EventsITAcademy.MVC.Models.AssignRoleViewModel

<div class="py-5 text-center">
    <h2>Edit User Role</h2>
</div>

<div class="d-flex align-items-center justify-content-center">
    <div class="col-md-10 col-lg-5">
            <form asp-action="AssignRole" asp-controller="AdminPanel" method="post">
            <hr class="my-4">
            <div class="my-3">
     
                <h3 style="display:none">User with ID - <input asp-for="UserId"><input></h3>

                    <select class="form-select" asp-items="Model.Roles" asp-for="SelectedRole" asp-value="SelectedRole" >
                    <option disabled selected>Select new role...</option>
                    </select>
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
            </form>
    </div>
</div>
